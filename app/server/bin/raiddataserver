#!/usr/bin/ruby
# -*- coding: utf-8 -*-
require 'rubygems'
require 'daemons'

NAME = "raiddataserver"
options = { 
    :app_name   => "ul_#{NAME}",
    :dir_mode   => :normal,
    :dir        => 'pids',
    :backtrace  => true,
    :ARGV => [ARGV[0],'--','-p','12100'],
#    :monitor    => false,
    :log_output    => true
}
f =  File.join(File.expand_path(__FILE__).gsub!("/bin/#{NAME}",""), "/src")
Dir.chdir(File.join(File.expand_path(__FILE__).gsub!(NAME,"")))
Daemons.run("#{f}/raid_data.rb",options)
