#!/usr/bin/ruby
# -*- coding: utf-8 -*-
require 'rubygems'
require 'daemons'
  options = { 
    :app_name   => "ul_raidchatserver",
    :dir_mode   => :normal,
    :dir        => 'pids',
    :backtrace  => true,
    :ARGV => [ARGV[0],'--','-p','12090'],
#    :monitor    => false,
    :log_output    => true
}
f =  File.join(File.expand_path(__FILE__).gsub!("/bin/raidchatserver",""), "/src")
Dir.chdir(File.join(File.expand_path(__FILE__).gsub!("raidchatserver","")))
Daemons.run("#{f}/raid_chat.rb",options)
