#!/usr/bin/ruby
# -*- coding: utf-8 -*-
require 'rubygems'
require 'daemons'
  options = { 
    :app_name   => "ul_raidrankserver_01",
    :dir_mode   => :normal,
    :dir        => 'pids',
    :backtrace  => true,
    :ARGV => [ARGV[0],'--','-p','12070'],
#    :monitor    => false,
    :log_output    => true
}
f =  File.join(File.expand_path(__FILE__).gsub!("/bin/raidrankserver_01",""), "/src")
Dir.chdir(File.join(File.expand_path(__FILE__).gsub!("raidrankserver_01","")))
Daemons.run("#{f}/raid_rank.rb",options)
