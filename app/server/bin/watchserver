#!/usr/bin/ruby
# -*- coding: utf-8 -*-
require 'rubygems'
require 'daemons'

NAME = "watchserver"
options = { 
  :app_name   => "ul_#{NAME}",
  :dir_mode   => :normal,
  :ARGV => [ARGV[0],'--','-p','12080', '-i', '1' ],
  :dir        => 'pids',
  :backtrace  => true,
  :log_output    => true
}
f =  File.join(File.expand_path(__FILE__).gsub!("/bin/#{NAME}",""), "/src")
Dir.chdir(File.join(File.expand_path(__FILE__).gsub!(NAME,"")))
Daemons.run("#{f}/watch.rb",options)
